{
  "kind": "collectionType",
  "collectionName": "project_reports",
  "info": {
    "name": "Project Reports",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "authors": {
      "collection": "members"
    },
    "header": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext"
    },
    "project": {
      "model": "project",
      "via": "project_reports"
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "minLength": 15
    },
    "route": {
      "type": "uid",
      "required": true
    }
  }
}
